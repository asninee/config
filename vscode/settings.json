{
  // themes
  "workbench.iconTheme": "chalice-icon-theme",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.colorTheme": "Vesper",

  // fonts
  "editor.fontFamily": "GeistMono Nerd Font",
  "editor.fontLigatures": "'ss09'",

  // apc
  "apc.font.family": "Geist",

  // formatting + linting
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.sortImports": "explicit"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "prettier.semi": false,
  "prettier.endOfLine": "auto",
  "prettier.printWidth": 80,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "eslint.options": {
    "extensions": [".js", ".jsx", ".mdx", ".ts", ".tsx"]
  },
  "eslint.validate": [
    "mdx",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],

  // ui
  "breadcrumbs.enabled": false,
  "window.commandCenter": false,
  "window.density.editorTabHeight": "compact",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.tree.enableStickyScroll": true,
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "top",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "pnpm-lock.yaml": true
  },
  "files.associations": {
    "*.css": "tailwindcss",
    ".env*": "dotenv"
  },

  // editor
  "editor.stickyScroll.enabled": true,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "all",
  "editor.padding.bottom": 14,
  "editor.padding.top": 14,
  "editor.accessibilitySupport": "off",
  "editor.guides.bracketPairs": "active",
  "editor.minimap.autohide": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.smoothScrolling": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.wordWrap": "on",
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.quickSuggestionsDelay": 0,
  "editor.scrollbar.vertical": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "security.workspace.trust.untrustedFiles": "open",

  // terminal
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.env.osx": {},
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.shellIntegration.enabled": false,

  // git
  "git.openRepositoryInParentFolders": "always",
  "git.autofetch": true,
  "git.confirmNoVerifyCommit": false,
  "git.confirmSync": false,

  // extensions
  "console-ninja.toolsToEnableSupportAutomaticallyFor": {
    "live-preview-extension": true
  },
  "console-ninja.featureSet": "Community",
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": []
  },
  "dotenv.enableAutocloaking": false,
  "gitlens.codeLens.scopes": ["document", "containers"],
  "console-ninja.showWhatsNew": false,
  "quokka.showStartViewOnFeatureRelease": false,

  // npm
  "npm.packageManager": "auto",

  // misc
  "update.mode": "manual"
}
