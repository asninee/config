{
  "features": {
    "copilot": false
  },
  "base_keymap": "VSCode",
  "theme": "Vesper",
  // fonts
  "ui_font_family": "Switzer",
  "ui_font_size": 14,
  "buffer_font_family": "CommitMono Nerd Font",
  "buffer_font_size": 12,
  "buffer_line_height": {
    "custom": 1.5
  },
  "buffer_font_features": {
    "ss09": true
  },
  // ui
  "show_whitespaces": "all",
  "toolbar": {
    "quick_actions": false
  },
  "project_panel": {
    "indent_size": 10
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "assistant": {
    "button": false
  },
  "tabs": {
    "git_status": true
  },
  "scrollbar": {
    "show": "never"
  },
  // terminal
  "terminal": {
    "default_height": 200,
    "line_height": {
      "custom": 1.2
    }
  },
  // formatting
  "tab_size": 2,
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": false
  }
}
